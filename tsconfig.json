{
    "compilerOptions": {
        "lib": ["ES2023"],
        "module": "nodenext",
        "target": "ES2023",
        "paths": {
            "@/*": ["./src/*"]
        },
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    }
}
